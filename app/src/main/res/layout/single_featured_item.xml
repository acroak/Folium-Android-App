<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/featuredContainer"
    android:layout_width="180dp"
    android:padding="12dp"
    android:layout_margin="4dp"
    android:elevation="4dp"
    android:layout_height="match_parent"
    android:background="@drawable/background_accent_border">


    <ImageView
        android:id="@+id/featImg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_report_image" />

    <TextView
        android:id="@+id/featPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        app:layout_constraintStart_toStartOf="@+id/featImg"
        app:layout_constraintTop_toBottomOf="@+id/featImg"
        android:textSize="18sp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/featTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        app:layout_constraintStart_toStartOf="@+id/featPrice"
        app:layout_constraintTop_toBottomOf="@+id/featPrice"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/patua_one_regular" />

</androidx.constraintlayout.widget.ConstraintLayout>